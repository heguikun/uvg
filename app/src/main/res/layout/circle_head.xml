<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_head"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <!--没有更换的背景-->
    <ImageView
        android:id="@+id/iv_head_bg"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_306"
        android:scaleType="centerCrop" />

    <ImageView
        android:id="@+id/iv_head_portrait"
        android:layout_width="@dimen/dp_90"
        android:layout_height="@dimen/dp_90"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="@dimen/dp_227"
        android:layout_marginEnd="@dimen/dp_12" />

    <TextView
        android:id="@+id/tv_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/iv_head_portrait"
        android:layout_marginEnd="@dimen/dp_9"
        android:layout_marginBottom="@dimen/dp_22"
        android:layout_toStartOf="@id/iv_head_portrait"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="定位中..."
        android:textColor="@color/color_white"
        android:textSize="@dimen/sp_12" />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/tv_address"
        android:layout_alignEnd="@id/tv_address"
        android:layout_marginBottom="@dimen/dp_5"
        android:text="默然回首"
        android:textColor="@color/color_fefefe"
        android:textSize="@dimen/sp_20" />

</RelativeLayout>