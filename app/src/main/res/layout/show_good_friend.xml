<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentEnd="true"
    android:layout_alignParentBottom="true"
    android:layout_marginEnd="@dimen/dp_10"
    android:layout_marginBottom="@dimen/dp_10"
    android:gravity="center"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/rl_head_portrait"
        android:layout_width="@dimen/dp_50"
        android:layout_height="@dimen/dp_65">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/iv_head_portrait"
            android:layout_width="@dimen/dp_50"
            android:layout_height="@dimen/dp_50"
            android:src="@mipmap/ic_launcher" />

        <ImageView
            android:id="@+id/iv_add"
            android:layout_width="@dimen/dp_22"
            android:layout_height="@dimen/dp_22"
            android:layout_gravity="bottom|center_horizontal"
            android:src="@drawable/show_icon_gz" />

    </FrameLayout>

    <!--在线-->
    <TextView
        android:id="@+id/tv_online"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_22"
        android:drawableTop="@drawable/show_icon_online"
        android:drawablePadding="@dimen/dp_3"
        android:gravity="center"
        android:shadowColor="@color/color_35black"
        android:shadowDx="3"
        android:shadowDy="3"
        android:shadowRadius="1"
        android:text="在线"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_12"
        android:textStyle="bold" />

    <!--点赞-->
    <TextView
        android:id="@+id/tv_give"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_22"
        android:drawableTop="@drawable/selector_show_give"
        android:drawablePadding="@dimen/dp_3"
        android:gravity="center"
        android:shadowColor="@color/color_35black"
        android:shadowDx="3"
        android:shadowDy="3"
        android:shadowRadius="1"
        android:text="0"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_12"
        android:textStyle="bold" />

    <!--评论-->
    <TextView
        android:id="@+id/tv_comment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_22"
        android:drawableTop="@drawable/show_icon_pl"
        android:drawablePadding="@dimen/dp_3"
        android:gravity="center"
        android:shadowColor="@color/color_35black"
        android:shadowDx="3"
        android:shadowDy="3"
        android:shadowRadius="1"
        android:text="0"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_12"
        android:textStyle="bold" />

    <!--分享-->
    <TextView
        android:id="@+id/tv_share"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_22"
        android:drawableTop="@drawable/show_icon_fx"
        android:drawablePadding="@dimen/dp_3"
        android:gravity="center"
        android:shadowColor="@color/color_35black"
        android:shadowDx="3"
        android:shadowDy="3"
        android:shadowRadius="1"
        android:text="分享"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_12"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_add_friends"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableTop="@drawable/show_icon_tj"
        android:drawablePadding="@dimen/dp_5"
        android:gravity="center"
        android:text="加好友"
        android:textSize="@dimen/sp_14"
        android:visibility="gone" />

</LinearLayout>