<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginStart="@dimen/dp_52"
    android:layout_marginEnd="@dimen/dp_52"
    android:background="@drawable/shape_circle_collection"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_add_collection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_50"
        android:layout_marginTop="@dimen/dp_22"
        android:layout_marginEnd="@dimen/dp_50"
        android:background="@drawable/selector_circle_collection"
        android:gravity="center"
        android:paddingTop="@dimen/dp_11"
        android:paddingBottom="@dimen/dp_11">

        <TextView
            android:id="@+id/tv_add_collection"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/collection_un_stars"
            android:drawablePadding="@dimen/dp_6"
            android:text="添加到收藏夹"
            android:textColor="@color/color_1a1a1a"
            android:textSize="@dimen/sp_16" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_add_shop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_50"
        android:layout_marginTop="@dimen/dp_5"
        android:layout_marginEnd="@dimen/dp_50"
        android:layout_marginBottom="@dimen/dp_22"
        android:background="@drawable/selector_circle_collection"
        android:gravity="center"
        android:paddingTop="@dimen/dp_11"
        android:paddingBottom="@dimen/dp_11">

        <TextView
            android:id="@+id/tv_add_shop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/collection_un_plus"
            android:drawablePadding="@dimen/dp_6"
            android:text="添加到商品库"
            android:textColor="@color/color_1a1a1a"
            android:textSize="@dimen/sp_16" />

    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_52"
        android:layout_marginEnd="@dimen/dp_52"
        android:layout_marginBottom="@dimen/dp_15">

        <TextView
            android:id="@+id/tv_cancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="start"
            android:text="取消"
            android:textColor="@color/color_999999"
            android:textSize="@dimen/sp_16" />

        <View
            android:layout_width="@dimen/dp_0_5"
            android:layout_height="match_parent"
            android:background="@color/color_cccccc" />

        <TextView
            android:id="@+id/tv_ok"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="end"
            android:text="确认"
            android:textColor="@color/app_color"
            android:textSize="@dimen/sp_16" />

    </LinearLayout>

</LinearLayout>