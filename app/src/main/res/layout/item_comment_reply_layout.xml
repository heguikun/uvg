<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_67"
        android:layout_marginEnd="@dimen/dp_65"
        android:layout_marginBottom="@dimen/dp_14"
        android:orientation="vertical">

        <TextView
            android:id="@+id/reply_item_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="钢铁般的坚持吧"
            android:layout_marginBottom="@dimen/dp_8"
            android:textColor="@color/color_0069fe"
            android:textSize="@dimen/sp_14" />

        <TextView
            android:id="@+id/reply_item_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:lineSpacingExtra="@dimen/dp_5"
            android:maxLength="150"
            android:text="超级可爱，很正的颜色！再去买一顶轮流带，哈哈哈哈"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/sp_12" />

    </LinearLayout>

</LinearLayout>

