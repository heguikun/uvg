<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/dp_20"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_12"
        android:layout_marginEnd="@dimen/dp_15"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_shop_head"
            android:layout_width="@dimen/dp_42"
            android:layout_height="@dimen/dp_42"
            android:src="@mipmap/ic_launcher" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_shop_nickname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="A-你的小可爱"
                android:textColor="@color/color_5868a2"
                android:textSize="@dimen/sp_16" />

            <TextView
                android:id="@+id/tv_shop_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_9"
                android:layout_marginBottom="@dimen/dp_10"
                android:text="卡西偶手表防水XIDJ运动男电子表AEQ-112W表"
                android:textColor="@color/color_1a1a1a"
                android:textSize="@dimen/sp_15" />

            <TextView
                android:id="@+id/tv_shop_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_10"
                android:text="价格:¥359"
                android:textColor="@color/color_1a1a1a"
                android:textSize="@dimen/sp_15" />

            <TextView
                android:id="@+id/tv_shop_describe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:lineSpacingExtra="@dimen/dp_2"
                android:maxLines="4"
                android:text="爱金凤凰发发所发生的发是的覅很舒服阿士大夫华盛顿  师傅话说的核辐射 暗示覅哈师大覅花生豆腐阿萨德发水电费是是大Vif撒大V从 上多少大V发愁谁大撒大V发大V 水电费水电费水电费水电费是的多少所发生的发防水"
                android:textColor="@color/color_666666"
                android:textSize="@dimen/sp_15" />

            <TextView
                android:id="@+id/tv_shop_details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginBottom="@dimen/dp_15"
                android:text="详情"
                android:textColor="@color/color_5868a2" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_shop"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <TextView
                android:id="@+id/tv_shop_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_15"
                android:text="40分钟前"
                android:textColor="@color/color_999999"
                android:textSize="@dimen/sp_12" />

        </LinearLayout>

        <ImageView
            android:id="@+id/iv_shop_collection"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/item_follow"
            android:padding="@dimen/dp_5" />

        <ImageView
            android:id="@+id/iv_shop_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_15"
            android:src="@drawable/tyq_sy_spsx" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_60"
        android:layout_marginTop="@dimen/dp_15"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_shop_purchase"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/item_cart"
            android:drawablePadding="@dimen/dp_5"
            android:text="购买"
            android:textColor="@color/color_5868a2"
            android:textSize="@dimen/sp_14" />

        <View
            android:layout_width="@dimen/dp_1"
            android:layout_height="@dimen/dp_8"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/dp_6"
            android:layout_marginEnd="@dimen/dp_6"
            android:background="@color/color_cccccc" />

        <TextView
            android:id="@+id/tv_shop_contact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/item_contact"
            android:drawablePadding="@dimen/dp_5"
            android:text="联系"
            android:textColor="@color/color_5868a2"
            android:textSize="@dimen/sp_14" />

        <View
            android:layout_width="@dimen/dp_1"
            android:layout_height="@dimen/dp_8"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/dp_6"
            android:layout_marginEnd="@dimen/dp_6"
            android:background="@color/color_cccccc" />

        <TextView
            android:id="@+id/tv_shop_give"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/selector_circle_give"
            android:drawablePadding="@dimen/dp_5"
            android:text="点赞"
            android:textColor="@color/color_5868a2"
            android:textSize="@dimen/sp_14" />

        <View
            android:layout_width="@dimen/dp_1"
            android:layout_height="@dimen/dp_8"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/dp_6"
            android:layout_marginEnd="@dimen/dp_6"
            android:background="@color/color_cccccc" />

        <TextView
            android:id="@+id/tv_shop_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/item_comment"
            android:drawablePadding="@dimen/dp_5"
            android:text="评论"
            android:textColor="@color/color_5868a2"
            android:textSize="@dimen/sp_14" />

        <View
            android:layout_width="@dimen/dp_1"
            android:layout_height="@dimen/dp_8"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/dp_6"
            android:layout_marginEnd="@dimen/dp_6"
            android:background="@color/color_cccccc" />

        <TextView
            android:id="@+id/tv_shop_show"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/item_show"
            android:drawablePadding="@dimen/dp_5"
            android:text="秀场"
            android:textColor="@color/color_5868a2"
            android:textSize="@dimen/sp_14" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/digCommentBody"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_60"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginEnd="@dimen/dp_10"
        android:background="@drawable/im_distribute_comm_bg"
        android:minHeight="10dp"
        android:orientation="vertical"
        android:paddingStart="12dp"
        android:paddingTop="12dp"
        android:paddingEnd="12dp"
        android:paddingBottom="8dp">

        <com.uvgouapp.view.PraiseListView
            android:id="@+id/praiseListView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:lineSpacingMultiplier="1.1"
            android:textColor="@color/praise_item"
            android:textSize="@dimen/sp_14"
            app:item_color="@color/praise_item" />

        <View
            android:id="@+id/lin_dig"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_marginBottom="@dimen/dp_5"
            android:background="@color/im_line_color" />

        <com.uvgouapp.view.CommentListView
            android:id="@+id/commentList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:item_color="@color/praise_item" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@color/color_f1f1f1" />

</LinearLayout>